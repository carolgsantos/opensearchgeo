{
  "type":"FeatureCollection",
  "features":[{% if total_results > 0 %}{% for item in data %}
    {
      "type":"Feature",
      "geometry":{
        "type":"Polygon",
        "coordinates":[
          [[{{ item.TL_Longitude }}, {{ item.TL_Latitude }}],
           [{{ item.TR_Longitude }}, {{ item.TR_Latitude }}],
           [{{ item.BR_Longitude }}, {{ item.BR_Latitude }}],
           [{{ item.BL_Longitude }}, {{ item.BL_Latitude }}],
           [{{ item.TL_Longitude }}, {{ item.TL_Latitude }}]]
        ]
      },
      "properties":{
        "title":"{{ item.SceneId }}",
        "id":"{{ url_root }}opensearch/granule.json?uid={{ item.SceneId }}",
        "updated":"{{ item.IngestDate }}",
        "alternate":"{{ url_root }}opensearch/granule.json?uid={{ item.SceneId }}",
        "icon":"{{ url_root }}{{item.icon }}",
        "via":"{{ url_root + 'opensearch/metadata/' + item.SceneId }}",
        {% for key, value in item.items() %}
          {% if key != 'icon' and key != 'SceneId' and key != 'IngestDate' %}
            "{{ key }}":"{{ value }}"{% if not loop.last %},{% endif %}
          {% endif %}
        {% endfor %}
      }
    } {% if not loop.last %},{% endif %}{%endfor%}{%endif%}
  ]
}