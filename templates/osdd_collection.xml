<OpenSearchDescription xml:lang="en"
xmlns="http://a9.com/-/spec/opensearch/1.1/"
xmlns:geo="http://a9.com/-/opensearch/extensions/geo/1.0/"
xmlns:time="http://a9.com/-/opensearch/extensions/time/1.0/">
    <ShortName>INPE_OS</ShortName>
    <Description>INPE - National Institute for Space Research collections search using
        OpenSearch Geo and Time extensions</Description>
    <Tags>INPE collections</Tags>
    <Contact>mzaglia@dpi.inpe.br</Contact>
    <Url type="application/atom+xml" template="{{ url }}opensearch/collections.atom?searchTerms={searchTerms?}&amp;bbox={geo:box?}&amp;uid={geo:uid?}&amp;count={count?}&amp;startIndex={startIndex?}&amp;start={time:start?}&amp;end={time:end?}"/>
